<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.RegisterFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_blank_register">

        <TextView
            android:id="@+id/fragment_register_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:fontFamily="@font/proximanova_black"
            android:textSize="36dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.194"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.404" />

        <EditText
        android:id="@+id/fragment_register_login_input"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_login_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColorHint="@color/white"
        android:layout_marginTop="18dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:fontFamily="@font/proximanova_regular"
        android:textColor="@color/white"
        android:hint="Login"
        app:layout_constraintTop_toBottomOf="@+id/fragment_register_label"/>

    <EditText
        android:id="@+id/fragment_register_password_input"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_login_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="18dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:hint="Password"
        android:fontFamily="@font/proximanova_regular"
        app:layout_constraintTop_toBottomOf="@+id/fragment_register_login_input"/>

        <Button
            android:id="@+id/btn_register_submit"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_login_register"
            android:text="Sign Up"
            android:textAllCaps="false"
            android:fontFamily="@font/proximanova_regular"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.504"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_register_password_input" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>