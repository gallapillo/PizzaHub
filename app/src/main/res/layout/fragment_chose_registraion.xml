<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.ChoseRegistrationFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main_choose_register_layout">
        <Button
            android:id="@+id/btn_choose_email_auth"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_login_register"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="18dp"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Sign up with"
            android:textColor="@color/white"
            android:fontFamily="@font/proximanova_regular"
            android:layout_marginStart="12dp"
            />

        <Button
            android:id="@+id/btn_choose_phone_auth"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_login_register"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="18dp"
            android:textColor="@color/white"
            android:layout_marginEnd="12dp"
            android:text="Sign up with"
            android:fontFamily="@font/proximanova_regular"
            app:layout_constraintEnd_toEndOf="parent"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>